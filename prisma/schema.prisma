generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product{
  id String @id @unique
  product_name String
  in_stock Boolean
  quantity Int
  price Int
  category String
  time DateTime @default(now())
}